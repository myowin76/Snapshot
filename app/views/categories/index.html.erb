
  <div class="page-header">
    <h1>Category List</h1>
  </div>
  <div class="action">
    <%= link_to new_category_path, :class => 'btn btn-primary btn-icon glyphicons circle_plus pull-right' do %>
    <i></i>
    <span>New Category</span>
    <% end %>
  </div>  
    
  
  <table id="tbl-categories" class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody> 
      <% @categories.each do |category| %>
        <tr>
          <td><%= link_to category.name, category %></td>
          <td><%= category.description %></td>
          <td><%= link_to 'Edit', edit_category_path(category), :class => 'btn btn-mini' %></td>
          <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' },
            :class => 'btn btn-mini btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
