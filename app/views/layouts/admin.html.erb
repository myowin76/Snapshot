<!DOCTYPE html>
<html>
  <%= render 'layouts/blocks/head' %>
  <body>
    <div class="container">
      
        <%= render 'layouts/blocks/header' %>

        <div id = "main" >
          <section class="site-content" role="main">
              
              <% flash.each do |name, msg| %>
                <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
                      <%= content_tag :div, msg %>
                </div>
              <% end %>
              <div class="aside">
                <%= render 'shared/admin/sidebar' %>
              </div>
              
              <div class="content-wrap">
                <div class="content">
                  <%= content_tag :h1, yield(:title) if show_title? %>
                  <%= yield %>
                </div>
              </div>    
              
          </section>
      </div>  <!-- /.container -->

  <%= render 'layouts/blocks/footer' %>

  </div>  <!-- /.container -->

    <%= yield :scripts %>
  </body>
</html>
