<%#= f.association :media_vehicles, :input_html => { :class=> 'chosen-media-vehic' } %>

<% unless @photo.nil? %>

	<label for='photo_media_vehicle_ids'>Media Vehicles</label>
	<%= select_tag 'photo_media_vehicle_ids', 
				options_from_collection_for_select( MediaVehicle.order(:name), "id", "name", @photo.media_vehicles.map(&:id) ), 
				:multiple => true,
				:class => 'chosen-media-vehic', 
				:name => 'photo[media_vehicle_ids][]' %> 
<% else %>
	<%= select_tag 'photo_media_vehicle_ids', 
				options_from_collection_for_select( MediaVehicle.order(:name), "id", "name" ), 
				:multiple => true,
				:class => 'chosen-media-vehic', 
				:name => 'photo[media_vehicle_ids][]' %> 
<% end %>