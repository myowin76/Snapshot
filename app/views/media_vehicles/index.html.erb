<%- model_class = MediaVehicle -%>
<div class="page-header">
  <h1>Media Vehicle List</h1>
</div>
<div class="action">
  <%= link_to new_media_vehicle_path, :class => 'btn btn-primary pull-right' do %>
  <i class="icon-plus icon-white"></i>
  <span>Add New</span>
  <% end %>
</div>

<table class="table table-striped" id="tbl-media-vehicles">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @media_vehicles.each do |media_vehicle| %>
      <tr>
        <td><%= link_to media_vehicle.name, media_vehicle %></td>
        <td><%= media_vehicle.description %></td>
        <td><%=l media_vehicle.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_media_vehicle_path(media_vehicle), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      media_vehicle_path(media_vehicle),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
