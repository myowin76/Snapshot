<%= simple_form_for @save_search, remote: true do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%#= f.input :params %>
    <%= f.hidden_field :user_id, :value=> current_user.id %>
    <%= f.hidden_field :params, :value=> @search_param %>
    <%#= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to "Cancel", root_path, :class=>"cancel btn btn-danger" %>
  </div>
<% end %>
