<%- model_class = Country -%>

<div class="page-header">
  <h1>Country List</h1>
</div>
<div class="action">
  <%= link_to new_country_path, :class => 'btn btn-primary btn-icon glyphicons circle_plus pull-right' do %>
  <i></i>
  <span>Add New</span>
  <% end %>
</div>

<table class="table table-striped" id="tbl-countries">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:desc) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= link_to country.name, country_path(country)  %></td>
        <td><%= country.desc %></td>
        <td><%=l country.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_country_path(country), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      country_path(country),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

