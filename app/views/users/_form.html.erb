

<div class="login-edit">
  <div>
    <h2>Edit User</h2>
    <%#= simple_form_for(@user, :html => { :method => :put }) do |f| %>
    <%= simple_form_for(@user, :url => registration_path(@user), :html => { :method => :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :username, :required => true, :autofocus => true %>
        <%= f.input :email %>
        <%#= f.input :password, :autocomplete => "off", :hint => "Leave it blank if you don't want to change it", :required => false %>
        <%#= f.input :password_confirmation, :required => false %>
        <%#= f.input :current_password, :hint => "We need your current password to confirm your changes", :required => false %>
        <%#= link_to "Change your password", edit_user_registration_path %>
      </div>

      <div class="form-inputs">
        <h2>Roles</h2>
        <%= f.association :roles, as: :check_boxes, :label => false %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Update", :class=>"btn btn-primary" %>
        <%= link_to "Back", :back, :class=> "btn" %>
      </div>
    <% end %>

