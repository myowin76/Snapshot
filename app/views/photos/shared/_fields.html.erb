<section class="photo_views_view">

  <div id="photo-details">
    <div class="left">
      <figure>
        <%= image_tag(photo.photo.url(:large)) %><br />  
        <fieldset>
          <%= f.label :display_for_project do %>
            <%= f.check_box :display_for_project %>
            Display for Project
          <% end %>
          
        </fieldset>  
        <fieldset>
          <%= f.label :brand_compliant do %>
            <%= f.check_box :brand_compliant %>
            Brand Compliance
          <% end %>
          
        </fieldset>  
        <fieldset>
          <%= f.label :published do %>
            <%= f.check_box :published %>
            Published
          <% end %>
          
        </fieldset>  
        <fieldset>
          <%= f.label :data_complete do %>
            <%= f.check_box :data_complete%>
            Data Complete
          <% end %>
        </fieldset>
      </figure>  
    </div>  
    <div class="right">  
      <div class="form-inputs">
              
        <%= f.label "Headline" %>
        <%= f.text_field :headline %>
        <div class="brands-owners-actions">
          <%#= render 'photos/shared/photos_brand_owners_dropdown', :f => f, :collection => @photo %>
        </div>
        <div class="brands-actions">
          <%#= render 'brands/shared/photos_brands_dropdown', :f => f, :collection => @photo %>
          <%#= f.association :brands, collection: Brand.all(order: 'name'),
              :include_blank => false, :input_html => { :class=> 'chosen-brand' } %>
        </div>
        
        <label>Product Categories</label>
          <%#= f.select :category_ids, Category.all.collect {|x| [x.name, x.id]}, {}, 
              :multiple => true, :class=> 'chosen-category' %>

          <%= select_tag :category_ids, 
            options_from_collection_for_select( Category.order(:name), "id", "name", photo.categories.map(&:id)), 
            :multiple => true,
            :class => 'chosen-category'
          %>

<%#= f.select :category_ids, Category.all.collect {|x| [x.name, x.id]}, {}, :multiple => true, :class=> 'chosen-category' %>
        <%#= f.collection_select :category_id, Category.all, :id, :name %>
        
        <%#= f.association :media_locations, collection: MediaLocation.all(order: 'name'), :input_html => { :class=> 'chosen-media-local' } %>
        <div class="mv-actions">
          <%#= f.association :media_vehicles, :input_html => { :class=> 'chosen-media-vehic' } %>
          <%#= render 'media_vehicles/shared/photo_mv_dropdown', :f => f, :collection => @photo %>
        </div>
        <%#= f.association :media_types, collection: MediaType.all(order: 'name'), :input_html => { :class=> 'chosen-media-type' } %>
        <%#= f.association :themes, collection: Theme.all(order: 'name'), :input_html => { :class=> 'chosen-theme' } %>
        <%#= f.association :promotion_types, collection: PromotionType.all(order: 'name'), :input_html => { :class=> 'chosen-promo-type' } %>
        <%#= f.association :promotion_calendar, collection: PromotionCalendar.all(order: 'name'), 
            :input_html => { :class=> 'chosen-promo-cal' } %>
        
        <fieldset>
          <%= f.label "Insight" %>
          <%= f.text_field :insight %>
        </fieldset>
        
        <fieldset>
        <%= f.label "Role of Communication" %>
        <%= f.text_field :role_of_comm %>

        <fieldset>
        <%= f.label "Perspective" %>
        <%= f.text_field :perspective %>
        
        <fieldset>
        <%= f.label "Description" %>
        <%= f.text_field :description %>
      </div>
    </div>  
 </section>   