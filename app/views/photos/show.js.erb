
	$('.site-content').hide();
	
	if ($('.overlay').children().hasClass('store_views_view')){
		$('.overlay').append("<%= j render('show_view') %>");
		$('.store_views_view').hide();
	}	
	else{
		$('.overlay').html("<%= j render('show_view') %>");
	}	

	$('.photo_views_view .close').live('click', function(){

		if ($('.overlay').children().hasClass('store_views_view')){
			$('.photo_views_view').remove();
			$('.store_views_view').show();
		}	
		else	
		{	
			$('.photo_views_view').remove();
			$('.site-content').show();
		}
	})
