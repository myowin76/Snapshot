
	$('.site-content').hide();

	
	if ($('.overlay').children().hasClass('store_category_view')){
		$('.store_category_view').hide();
		$('.overlay').append("<%= j render('show_view') %>");
	}	
	else if ($('.overlay').children().hasClass('store_views_view')){
	$('.store_views_view').hide();
		$('.overlay').append("<%= j render('show_view') %>");
		
	}
	else{
		$('.overlay').html("<%= j render('show_view') %>");
	}	


	// Close photo details popup

	$('.photo_views_view .close').live('click', function(){
		$('.photo_views_view').fadeOut(200, function(){
				$(this).remove();
		});
		if($('.overlay').children().hasClass('store_category_view')){
			$('.store_category_view').show();
		}
		else if ($('.overlay').children().hasClass('store_views_view')){
			$('.store_views_view').show();
		}	
		else{	
			$('.site-content').show();
		}
	})
