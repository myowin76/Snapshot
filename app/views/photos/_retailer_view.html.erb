<% for retailer in @retailers %>
  <% if params[:search] && params[:search][:retailers] && params[:search][:retailers].include?(retailer.id.to_s) %>
  	<%= label_tag "search[retailers][#{retailer.id}]" do %>
    	<%= check_box_tag "search[retailers][]", retailer.id, true, :id => "search_retailers_#{retailer.id}" %>
    	<%= retailer.name %>
    <% end %>  	
  <% else %>  
  	<%= label_tag "search[retailers][#{retailer.id}]" do %>
    	<%= check_box_tag "search[retailers][]", retailer.id, false, :id => "search_retailers_#{retailer.id}" %>
    	<%= retailer.name %>
    <% end %>
  <% end %>  
<% end %>  