<div class="page-controls">  
  <%= page_entries_info @photos %>
</div>

<% unless @photos.nil? %>    
  <ul class="list-header" style="display: none;">
    <li style="width: 143px;">&nbsp;</li>
    <li style="width: 132px;">Retailer</li>
    <li style="width: 130px;">Date</li>
    <li style="width: 143px;">Location</li>
    
  </ul>
  <ul class="photos-viewer row-fluid">
    
    <% @photos.each do |photo| %>
      <% unless photo.audit.nil? %>
        <li>
          <div class="viewer-inner">
            <figure class="thumb">
              <%= link_to image_tag(photo.photo.url(:medium)), photo, remote: true %>
            </figure>
            <section>
              <%= check_box_tag "photo_ids[]", photo.id %>
              <div class="retailer">
                <%= photo.audit.store.retailer.name unless photo.audit.store.nil? %>
              </div>  
              <div class="brand">
                <%= photo.brands.map(&:name).join(",") %>
              </div>  
              <div class="date">
                <%= photo.audit.audit_date %>
              </div>
              <div class="address">
                <%= photo.audit.store.address2 unless photo.audit.store.nil? %>
              </div>
            </section>
          <%#= photo.audit.store.country.name unless photo.audit.store.country.nil? %>
          <%#= photo.audit.store.retailer.sector.name unless photo.audit.store.retailer.sector_id.nil? %>
          </div>
        </li>
       <% end %> 
    <% end %>
  </ul>
<% end %>
<div class="page-controls">  
  <!-- <a href="#" class="go-top pull-right">Top</a> -->
  <%#= page_entries_info @photos %>
  <div class="will-page">
    <%= will_paginate @photos, :next_label => 'Next', :previous_label => 'Prev', :link_separator => '',
    :params => {:search => params_search} %>    
  </div>
  
</div>
  