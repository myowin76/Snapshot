<h1>Listing photos</h1>

<aside>
<h3><%= @test %></h3>
<% if request.post? %>
    <% params[:search].each do |param| %>
      <%= params[:search][:category] %>
    <% end %>
<% end %>

    <h3>Search by</h3>  

    <%= form_tag root_path :method => 'get' do %>
      <p>
        <%= label_tag "Postcode" %>
        <%= text_field_tag "search[postcode]" %>
      </p>
      <p>  
        <h3>Sectors</h3>
        <% for sector in @sectors %>
          <%= check_box_tag "search[sector][]", sector.id %>
          <%= sector.name %><br />
        <% end %>
      </p>
      <p>  
        <h3>Channels</h3>
        <% for channel in @channels %>
          <%= check_box_tag "search[channel][]", channel.id %>
          <%= channel.name %><br />
        <% end %>
      </p>
      <p>
        <h3>Categories</h3>  
        <% for category in @categories %>
          <%= check_box_tag "search[category][]", category.id %>
          <%= category.name %><br />
        <% end %>
      </p>
      <p>  
        <%= submit_tag "Search", :name => nil %>
      </p>
    <% end %>

    
    


</aside>
<div class="main">
    <%#= gmaps4rails(@json) %>
<table>
    <thead>

    </thead>
    <tbody>
    <% unless @photos.nil? %>    
      <% @photos.each do |photo| %>
          <tr style="border-bottom: 1px solid #ddd; display:block;">
              <td>
                <%= check_box_tag photo.id %>
              </td>
              <td>
                  <%= link_to image_tag(photo.photo.url(:thumb)), photo.photo.url(:originals)  %><br />
              </td>
              <td>  
                  Brand: <%= photo.brand.name %><br />
                  Date:  <%= photo.created_at.strftime('%d/%m/%Y') %><br />
                  Audit: <%= photo.audit.id %><br />
                  Category: <%= photo.category.name %><br />
              </td>
              <td>
                  <strong>Media type:</strong> <%= photo.media_type.name %><br />
                  <strong>Store: </strong><%= photo.audit.store.name %><br />
                  <!--strong>Longitude:</strong> <%= photo.audit.store.longitude %><br /-->
                  <!--strong>Latitude:</strong> <%= photo.audit.store.latitude %><br /-->
                  
              </td>
              <td>
                  <% unless photo.promotion_calendar_id.nil? %>
                    <strong>Promotion Calendar:</strong> <%= photo.promotion_calendar.name %><br />
                  <% end %>
                  <% unless photo.promotion_type_id.nil? %>
                    <strong>Promotion Type:</strong> <%= photo.promotion_type.name %><br />
                  <% end %>
                  
                  <strong><%= link_to "Details", photo %></strong
              </td>
              <td>    
                  <%#= link_to 'Show', photo %>
                  <%#= link_to 'Edit', edit_photo_path(photo) %>
                  <%#= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %><br />
              </td>    
          </tr>
      <% end %>
        
    <% end %>
    </tbody>
</table>



<%#= link_to 'New Photo', new_photo_path %>
</div>