<table>
  <tr>
    <td valign='top'>
      <%= link_to image_tag(@photo.photo.url(:large)), @photo.photo.url(:originals)  %><br />
    </td>
    <td width='50'></td>
    <td>
      <%= simple_form_for(@photo) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :headline %>
          <%= f.association :brands %>
          <%#= f.association :audit %>
          <%= f.association :categories %>
          <%= f.association :media_locations %>
          <%= f.association :media_vehicles %>
          <%= f.association :media_types %>
          <%= f.association :themes %>
          <%= f.input :description %>
        </div>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>

    </td>
  </tr>
</table>

