            <div class="widget widget-3">
              <div class="widget-head">
                <h4 class="heading"><%= audit.audit_date %></h4>
              </div>
              <div class="widget-body">
                <%= audit.photos.count %> photos. <br />
                by <%= audit.user.username %>
              </div>
              <div class="widget-footer align-right">
                <!-- <a href="#" class="glyphicons circle_plus"><i></i>Add</a> -->
                <%= link_to audit, :class => "glyphicons list" do %>
                  <i></i>View
                <% end %>
              </div>
            </div>
          </div>
        <% end %> 
      <% end %>   
