<div class="span12">
  <div class="page-header">
    <h1><%= @store.name %></h1>
  </div>
</div>
<div class="span12">
  <p>
    <%= link_to 'Upload Images', new_audit_path(:retailer => @store.retailer.name, :store => @store.name) %>
  </p>
  <p id="notice"><%= notice %></p>

  <p>
    <b>Address:</b><br />
    <%= @store.address %><br />
    <%= @store.address2 %><br />
    <%= @store.postcode %><br />
    <%# = @store.location.name %>
    <%= @store.country.name unless @store.country_id.nil? %>
  </p>
  <p>
    <b>Sector</b>
    <%= @store.retailer.sector.name unless @store.retailer.sector_id.nil? %>
  </p>

  <p>
    <b>Store format:</b>
    <%= @store.store_format.name %>
  </p>

  <p>
    <b>Retailer:</b>
    <%= @store.retailer.name %>
  </p>

    <% unless @photo_category.nil? %>
      <div class="widget">


      <% @photo_category.each do |category, photos| %>
        
          
          <header>
        
            <ul class="toggle_content" style="display: none;">                         
              <li class="arrow"><a href="#">Toggle Content</a></li>
            </ul>
          </header>
          <section class="group">
            <ul class="gallery_basic" id="basicGallery">
              <% for c in category %>
                <%= c.name  %>
                <% for photo in c.photos %>
                  <li><%= link_to image_tag(photo.photo.url(:medium)), photo, remote: true, "data-toggle" => "modal" %></li>
                <% end %>
              <% end %> 
            </ul>
          </section>
      <% end %>     
      
    </div>  
    <% end %>
    
  <%#= link_to 'Edit', edit_store_path(@store) %>
  <%#= link_to 'Back', stores_path %>

</div>