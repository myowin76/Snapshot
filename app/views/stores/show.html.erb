  <div class="page-header">
    <h1><%= @store.name %></h1>
    
  </div>

<div class="">
  <p id="notice"><%= notice %></p>
  <div class="action pull-right">
    <%= link_to new_audit_path(:retailer => @store.retailer.name, :store => @store.name),
        :class => 'btn btn-primary' do %>
        <i class="icon-upload icon-white"></i>
        <span>Upload Images</span>
    <% end %>    
    <%= link_to edit_store_path(@store), :class => 'btn btn-primary' do %>
        <i class="icon-edit icon-white"></i>
        <span>Edit</span>
    <% end %>    
  </div>
  
  <p>
    <% if @store.address.present? %>
      <%= @store.address %>,
    <% end %>
    <% if @store.address.present? %>
      <%= @store.address2 %>,
    <% end %>
    <% if @store.address3.present? %>
      <%= @store.address3 %><br />
    <% end %>
    <% if @store.town.present? %>
      <%= @store.town %>
    <% end %>
    <% if @store.postcode.present? %>
      <%= @store.postcode %>,
    <% end %>
    <%= @store.country.name unless @store.country_id.nil? %>
  </p>
  <p>
    <strong>Sector: </strong>
    <%= @store.retailer.sector.name unless @store.retailer.sector_id.nil? %>
  </p>
  <p>
    <strong>Store format:</strong>
    <%= @store.store_format.name %>
  </p>
  <p>
    <% if @store.channel_id.present? %>
      <strong>Environment Type:</strong>
      <%= @store.environment_type.name %>
    <% end %>
  </p>
  <p>
    <% if @store.channel_id.present? %>
      <strong>Channel:</strong>
      <%= @store.channel.name %>
    <% end %>
  </p>      

    <strong>Retailer:</strong>
    <%= @store.retailer.name %>
  </p>
