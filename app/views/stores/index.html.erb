<aside>
<h3><%= @test %></h3>
    <h3>Search by</h3>  
    <%= form_tag root_path :method => 'get' do %>
      <p>
        <%= label_tag "Postcode" %>
        <%= text_field_tag :media_location_id_cont %>
      </p>
      <p>  
        <h3>Sectors</h3>
        <% for sector in @sectors %>
          <%= check_box_tag "sector[]", sector.id %>
          <%= sector.name %><br />
        <% end %>
      </p>
      <p>  
        <h3>Channels</h3>
        <% for channel in @channels %>
          <%= check_box_tag "channel[]", channel.id %>
          <%= channel.name %><br />
        <% end %>
      </p>
      <p>
        <h3>Categories</h3>  
        <% for category in @categories %>
          <%= check_box_tag "category[]", category.id %>
          <%= category.name %><br />
        <% end %>
      </p>
      <p>  
        <%= submit_tag "Search", :name => nil %>
      </p>
    <% end %>


    <h3>Audits(Users)</h3>
