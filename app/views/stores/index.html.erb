
<div class="">
  <div class="page-header">
    <h1>Stores</h1>
  </div>   
  <div class="action">
    Download
    <%= link_to "CSV", stores_path(format: "csv") %> |
    <%= link_to "Excel", stores_path(format: "xls") %>
    <%= link_to 'New Store', new_store_path, :class => 'btn btn-primary pull-right' %>
  </div>

<table id="tbl-stores" class="table table-striped">
  <thead>
  <tr>
    <th>Store</th>
    <th>Store format</th>
    <th>Retailer</th>
    <th>Address</th>
    <th></th>
    <th></th>
    
  </tr>
</thead>
<tbody>


<% #TO DO need to check it is first record? %>
<% @stores_in_country.each do |store| %>
  <tr>
    <td><%= link_to store.name, store, remote: true %></td>
    <!-- <td><%= store.name %></td> -->
    <td><%= store.store_format.name %></td>
    <td><%= store.retailer.name %></td>
    <td>
      <%= store.address %><br /><%= store.address2 %><br />
      <%= store.postcode %>,
      <%= store.country.name %>
    </td>
    <!--td><%#= link_to 'Details', store %></td-->
    <td><%= link_to 'Edit', edit_store_path(store) %></td>
    <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>






</div>