<div class="">
  <div class="page-header">
    <h1>Store List</h1>
  </div>   
  <div class="action">
    <%#= link_to "CSV", stores_path(format: "csv") %>
    <%#= link_to "Excel", stores_path(format: "xls") %>
    <%= link_to new_store_path, :class => 'btn btn-primary btn-icon glyphicons circle_plus pull-right' do %>
    <i></i>
    <span>New Store</span>
    <% end %>
  </div>

  <table id="tbl-stores" class="table table-striped">
    <thead>
      <tr>
        <th>Store Name</th>
        <th>Store format</th>
        <th>Retailer</th>
        <th>Address</th>
        <th></th>
        <th></th> 
      </tr>
    </thead>
    
    <tbody>

    <% #TO DO need to check it is first record? %>
    <% @stores.each do |store| %>
      <tr>
        <% if store.name.present? %>
          <td><%= link_to store.name, store %></td>
        <% end %>
        <!-- <td><%= store.name %></td> -->
        <td><%= store.store_format.name unless store.store_format.nil? %></td>
        <td><%= store.retailer.name unless store.retailer.nil? %></td>
        <td>
          <% if store.address.present? %>
            <%= store.address %>,
          <% end %>  
          <% if store.address2.present? %>
            <%= store.address2 %>,<br />
          <% end %>
          <% if store.address3.present? %>  
            <%= store.address3 %>, <br />
          <% end %>
          <% if store.town.present? %>  
            <%= store.town %>, <br />
          <% end %>  
          <% if store.postcode.present? %>  
            <%= store.postcode %>,
          <% end %>  
          <% unless store.country_id.nil? %>
            <%#= store.country.name %>
          <% end %>
        </td>
        <!--td><%#= link_to 'Details', store %></td-->
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>