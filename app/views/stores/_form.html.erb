<%= simple_form_for(@store) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :address2 %>
    <%= f.input :address3 %>
    <%= f.input :town %>
    <%= f.input :postcode %>
    <%= f.association :store_format, :include_blank => false %>
    
    <div class="retailer-actions">
      <%#= f.association :retailer, :include_blank => false %>  
      <%= render 'stores/shared/retailer_dropdown' %>
    </div>
    <%= link_to "Add New Retailer", new_retailer_path, :id => 'store-new-retailer', remote: true %>  
    
    <%= f.association :country, :include_blank => false %>
    <%= f.input :longitude %>
    <%= f.input :latitude %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
  </div>
<% end %>
