<%= simple_form_for(@store) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :address2 %>
    <%= f.input :postcode %>
    <%= f.association :store_format, :include_blank => false %>
    <%= f.association :retailer, :include_blank => false %>
    <%#= f.association :country, :include_blank => false %>
    <%= f.input :longitude %>
    <%= f.input :latitude %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
