<div class="page-header">
  <h1>Listing companies</h1>
</div>

<div class="action">
  <%= link_to new_company_path, :class => 'btn btn-primary btn-icon glyphicons circle_plus pull-right' do %>
    <i></i>
    <span>New Company</span>
  <% end %>
</div>
<table id="tbl-companies" class="table table-striped">
  <thead>
    <tr>
      <th>Logo</th>
      <th>Name</th>
      <th>Co brand</th>

      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  

    <% @companies.each do |company| %>
      <tr>
        <td><%= image_tag(company.logo.url(:normal)) %></td>
        <td><%= company.name %></td>
        <td><%= company.co_brand %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
