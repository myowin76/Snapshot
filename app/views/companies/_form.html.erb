<%= simple_form_for @company , :html => { :multipart => true } do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :co_brand %>
    <%= f.file_field :logo %>
  </div>

  <div class="form-inputs">
	  <% unless f.object.new_record? %>
        <%= image_tag(@company.logo.url(:normal)) %>
	  <% end %>
	</div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
